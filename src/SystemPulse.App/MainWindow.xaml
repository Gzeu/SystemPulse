<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SystemPulse.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SystemPulse"
    Foreground="{ThemeResource TextFillColorPrimary}"
    Background="{ThemeResource SolidBackgroundFillColorBase}"
    ExtendsContentIntoTitleBar="True"
    SystemBackdropType="MicaAlt">

    <Grid RowDefinitions="48,*,32">
        <!-- TITLE BAR -->
        <Grid x:Name="AppTitleBar" Background="Transparent" Grid.Row="0"/>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" RowDefinitions="*" ColumnDefinitions="200,*">
            <!-- NAVIGATION SIDEBAR -->
            <NavigationView
                x:Name="MainNavView"
                Grid.Column="0"
                IsBackButtonVisible="Collapsed"
                IsPaneOpen="True"
                PaneDisplayMode="Left"
                Background="{ThemeResource SolidBackgroundFillColorSecondary}"
                SelectionChanged="MainNavView_SelectionChanged">

                <NavigationView.MenuItems>
                    <NavigationViewItem Content="Overview" Tag="overview" Icon="Home"/>
                    <NavigationViewItem Content="Processes" Tag="processes" Icon="List"/>
                    <NavigationViewItem Content="Performance" Tag="performance" Icon="LineChart"/>
                    <NavigationViewItem Content="Startup" Tag="startup" Icon="Permissions"/>
                    <NavigationViewItem Content="Services" Tag="services" Icon="Settings"/>
                    <NavigationViewItem Content="Users" Tag="users" Icon="People"/>
                    <NavigationViewItem Content="Details" Tag="details" Icon="ViewList"/>
                </NavigationView.MenuItems>

                <NavigationView.FooterMenuItems>
                    <NavigationViewItem Content="Settings" Tag="settings" Icon="Setting"/>
                    <NavigationViewItem Content="About" Tag="about" Icon="Info"/>
                </NavigationView.FooterMenuItems>

                <!-- CONTENT FRAME -->
                <Frame x:Name="ContentFrame" Grid.Column="1" Background="{ThemeResource SolidBackgroundFillColorBase}"/>
            </NavigationView>
        </Grid>

        <!-- STATUS BAR -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Background="{ThemeResource SolidBackgroundFillColorSecondary}" BorderBrush="{ThemeResource DividerStrokeColorDefault}" BorderThickness="0,1,0,0" Padding="16,8">
            <TextBlock Grid.Column="0" x:Name="StatusText" VerticalAlignment="Center" FontSize="12" Foreground="{ThemeResource TextFillColorSecondary}"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                <TextBlock x:Name="CPUText" Foreground="#00D4FF" FontWeight="SemiBold"/>
                <TextBlock x:Name="RAMText" Foreground="#10B981" FontWeight="SemiBold"/>
                <TextBlock x:Name="GPUText" Foreground="#7C3AED" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
