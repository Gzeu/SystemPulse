<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SystemPulse.App.Views.PerformancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:SystemPulse.App.Converters"
    xmlns:oxy="using:OxyPlot.Wpf"
    Background="{ThemeResource SolidBackgroundFillColorBase}">

    <Page.Resources>
        <converters:BytesToReadableConverter x:Key="BytesConverter"/>
        <converters:PercentageConverter x:Key="PercentageConverter"/>
    </Page.Resources>

    <Grid Padding="24" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock 
                    Text="Performance Monitor" 
                    Style="{ThemeResource TitleTextBlockStyle}" 
                    FontWeight="SemiBold"/>
                <TextBlock 
                    Text="Real-time system performance charts and statistics" 
                    FontSize="14" 
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <Button 
                    Content="Export CSV" 
                    Command="{x:Bind ViewModel.ExportDataCommand}">
                    <Button.Icon>
                        <FontIcon Glyph="&#xE74E;"/>
                    </Button.Icon>
                </Button>
                
                <Button 
                    Content="Clear History" 
                    Command="{x:Bind ViewModel.ClearHistoryCommand}">
                    <Button.Icon>
                        <FontIcon Glyph="&#xE74D;"/>
                    </Button.Icon>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Time Range Selector -->
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock 
                    Text="Time Range:" 
                    FontSize="14" 
                    VerticalAlignment="Center" 
                    Margin="0,0,8,0"/>
                
                <ToggleButton 
                    Content="1m" 
                    IsChecked="{x:Bind ViewModel.IsOneMinute, Mode=TwoWay}" 
                    MinWidth="60"/>
                <ToggleButton 
                    Content="5m" 
                    IsChecked="{x:Bind ViewModel.IsFiveMinutes, Mode=TwoWay}" 
                    MinWidth="60"/>
                <ToggleButton 
                    Content="15m" 
                    IsChecked="{x:Bind ViewModel.IsFifteenMinutes, Mode=TwoWay}" 
                    MinWidth="60"/>
                <ToggleButton 
                    Content="30m" 
                    IsChecked="{x:Bind ViewModel.IsThirtyMinutes, Mode=TwoWay}" 
                    MinWidth="60"/>
                <ToggleButton 
                    Content="1h" 
                    IsChecked="{x:Bind ViewModel.IsOneHour, Mode=TwoWay}" 
                    MinWidth="60"/>

                <TextBlock 
                    Text="|" 
                    FontSize="14" 
                    VerticalAlignment="Center" 
                    Margin="8,0"/>

                <TextBlock 
                    Text="Update Interval:" 
                    FontSize="14" 
                    VerticalAlignment="Center"/>
                
                <ComboBox 
                    SelectedIndex="{x:Bind ViewModel.UpdateIntervalIndex, Mode=TwoWay}" 
                    MinWidth="100">
                    <ComboBoxItem Content="1 second"/>
                    <ComboBoxItem Content="2 seconds"/>
                    <ComboBoxItem Content="5 seconds"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Charts Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- CPU Chart -->
                <Border 
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                    <Grid RowSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE950;" FontSize="20" Foreground="#00D4FF"/>
                            <TextBlock 
                                Text="CPU Usage" 
                                FontSize="18" 
                                FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Statistics -->
                        <Grid Grid.Row="1" ColumnSpacing="20" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="Current" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CpuCurrent, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="Bold" Foreground="#00D4FF"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="Average" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CpuAverage, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Spacing="4">
                                <TextBlock Text="Minimum" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CpuMin, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Spacing="4">
                                <TextBlock Text="Maximum" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CpuMax, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>

                        <!-- Chart -->
                        <Border Grid.Row="2" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Margin="0,12,0,0">
                            <oxy:PlotView x:Name="CpuChart" Model="{x:Bind ViewModel.CpuPlotModel, Mode=OneWay}" Height="280"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- RAM Chart -->
                <Border 
                    Grid.Row="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                    <Grid RowSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE7F4;" FontSize="20" Foreground="#10B981"/>
                            <TextBlock Text="Memory Usage" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>

                        <Grid Grid.Row="1" ColumnSpacing="20" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="Current" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.RamCurrent, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="Average" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.RamAverage, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Spacing="4">
                                <TextBlock Text="Minimum" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.RamMin, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Spacing="4">
                                <TextBlock Text="Maximum" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.RamMax, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>

                        <Border Grid.Row="2" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Margin="0,12,0,0">
                            <oxy:PlotView x:Name="RamChart" Model="{x:Bind ViewModel.RamPlotModel, Mode=OneWay}" Height="280"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- GPU Chart -->
                <Border 
                    Grid.Row="2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                    <Grid RowSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE7F8;" FontSize="20" Foreground="#7C3AED"/>
                            <TextBlock Text="GPU Usage" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>

                        <Grid Grid.Row="1" ColumnSpacing="20" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="Current" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.GpuCurrent, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="Bold" Foreground="#7C3AED"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="Average" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.GpuAverage, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Spacing="4">
                                <TextBlock Text="Minimum" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.GpuMin, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Spacing="4">
                                <TextBlock Text="Maximum" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.GpuMax, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>

                        <Border Grid.Row="2" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Margin="0,12,0,0">
                            <oxy:PlotView x:Name="GpuChart" Model="{x:Bind ViewModel.GpuPlotModel, Mode=OneWay}" Height="280"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Network Chart -->
                <Border 
                    Grid.Row="3"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                    <Grid RowSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE774;" FontSize="20" Foreground="#F59E0B"/>
                            <TextBlock Text="Network Activity" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>

                        <Grid Grid.Row="1" ColumnSpacing="20" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="Current" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock FontSize="20" FontWeight="Bold" Foreground="#F59E0B">
                                    <Run Text="{x:Bind ViewModel.NetworkCurrent, Mode=OneWay}"/>
                                    <Run Text=" Mbps"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="Average" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock FontSize="20" FontWeight="SemiBold">
                                    <Run Text="{x:Bind ViewModel.NetworkAverage, Mode=OneWay}"/>
                                    <Run Text=" Mbps"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Spacing="4">
                                <TextBlock Text="Peak" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock FontSize="20" FontWeight="SemiBold">
                                    <Run Text="{x:Bind ViewModel.NetworkMax, Mode=OneWay}"/>
                                    <Run Text=" Mbps"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <Border Grid.Row="2" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Margin="0,12,0,0">
                            <oxy:PlotView x:Name="NetworkChart" Model="{x:Bind ViewModel.NetworkPlotModel, Mode=OneWay}" Height="280"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Disk Chart -->
                <Border 
                    Grid.Row="4"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                    <Grid RowSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xEDA2;" FontSize="20" Foreground="#EF4444"/>
                            <TextBlock Text="Disk Activity" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>

                        <Grid Grid.Row="1" ColumnSpacing="20" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="Current" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.DiskCurrent, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="Bold" Foreground="#EF4444"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="Average" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.DiskAverage, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Spacing="4">
                                <TextBlock Text="Peak" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.DiskMax, Mode=OneWay, Converter={StaticResource PercentageConverter}}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>

                        <Border Grid.Row="2" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4" Margin="0,12,0,0">
                            <oxy:PlotView x:Name="DiskChart" Model="{x:Bind ViewModel.DiskPlotModel, Mode=OneWay}" Height="280"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
