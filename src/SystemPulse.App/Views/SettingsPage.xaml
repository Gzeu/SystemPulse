<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SystemPulse.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource SolidBackgroundFillColorBase}">

    <Grid Padding="20">
        <StackPanel Spacing="20" MaxWidth="600">
            <TextBlock Text="Settings" Style="{ThemeResource TitleTextBlockStyle}"/>
            
            <StackPanel Spacing="8">
                <TextBlock Text="Theme" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <ComboBox SelectedIndex="0">
                    <ComboBoxItem>Light</ComboBoxItem>
                    <ComboBoxItem>Dark</ComboBoxItem>
                    <ComboBoxItem>System</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            
            <StackPanel Spacing="8">
                <TextBlock Text="Refresh Interval (seconds)" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                <NumberBox Value="2" Minimum="1" Maximum="60"/>
            </StackPanel>
            
            <Button Content="Save Settings" Background="{ThemeResource AccentButtonBackground}"/>
        </StackPanel>
    </Grid>
</Page>
